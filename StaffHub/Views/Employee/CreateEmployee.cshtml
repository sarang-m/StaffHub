@model EmployeeAddRequest
@{
    ViewBag.Title = "Create Employee";
}

<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>StaffHub</span>
            <i class="fa-solid fa-caret-right"></i>
            <span>Employees</span>
            <i class="fa-solid fa-caret-right"></i>
            <span>Create</span>
        </div>
    </div>
</div>


<div class="form-container" >
    <a href="~/employee/index" class="link-hover"> Back to Employee List</a>
    <h2 class="text-large">Add Employee</h2>
    <form action="~/employee/create" method="post">
        @*Employee name*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="EmployeeName" class="form-label pt"> Empolyee Name </label>
            </div>
            <div class="flex-1">
                <div>
                    <input asp-for="EmployeeName" class="form-input" />
                </div>
                <div>
                    <span asp-validation-for="EmployeeName" class="text-red"></span>
                </div>
                
            </div>
        </div>

        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="Email" class="form-label pt"> Email </label>
            </div>
            <div class="flex-1">
                <div>
                    <input asp-for="Email" class="form-input" />
                </div>
                <div>
                    <span asp-validation-for="Email" class="text-red"></span>
                </div>
                
            </div>
        </div>

        @*DateOfBirth*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="DateOfBirth" class="form-label pt"> Date Of Birth </label>
            </div>
            <div class="flex-1">
                <input asp-for="DateOfBirth" class="form-input" />
                <span asp-validation-for="DateOfBirth" class="text-red"></span>
            </div>
        </div>

        @*Gender*@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label"> Gender </label>
            </div>
            <div class="flex-1">
                <div>
                @{
                    string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
                }
                @foreach(string gender in genders)
                {
                    <input asp-for="Gender" type="radio" id="@gender"  value="@gender" />
                    <label for="@gender"> @gender </label>
                }
                </div>
                <div>
                    <span asp-validation-for="Gender" class="text-red"></span>
                </div>
                
            </div>
            
            
        </div>

        @*Department*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="DepartmentID" class="form-label pt"> Department </label>
            </div>
            <div class="flex-1">
                <select asp-for="DepartmentID" class="form-input" asp-items="@ViewBag.Department">
                    <option value=""> Please Select</option>
                    
                </select>
                <span asp-validation-for="DepartmentID" class="text-red"></span>

            </div>
        </div>

        @*Role*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="Role" class="form-label pt"> Role </label>
            </div>
            <div class="flex-1">
                <textarea asp-for="Role" class="form-input"></textarea>
                <span asp-validation-for="Role" class="text-red"></span>
            </div>
        </div>

        @*IsActive*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <input asp-for="IsActive" value="true" checked/>
                <label id="IsActive" class="form-label">Is Active</label>
                <span asp-validation-for="IsActive" class="text-red"></span>
            </div>
        </div>

        @*Submit Button*@
        <div class="form-field flex">
            <div class="w-25">
            </div>

            <div class="flex-1">
                <button class="button button-green-back"> Add Employee </button>
                <div asp-validation-summary="All" class="text-red"></div>
                @if(ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml"> @error </li>
                            }
                        </ul>

                    </div>
                }
            </div>
                
            
        </div>
            
    </form>
</div>

