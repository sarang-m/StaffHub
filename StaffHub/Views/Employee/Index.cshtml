@model IEnumerable<EmployeeResponse>
@{
    ViewBag.Titile = "Employees";
}

<form asp-controller="Employee" asp-action="Index" method="get">
    <h1>Employees </h1>
    <a href="~/employee/create" > Add Employee </a>
    <div class="box flex">
        <div class="flex-1">
            <select class="form-input" name="searchBy" >
                @foreach (var field in ViewBag.SearchFields)
                {
                    if (field.Key == @ViewBag.currentSearchBy)
                    {
                        <option value="@field.Key" selected="selected">@field.Value</option>
                    }
                    else
                    {
                        <option value="@field.Key">@field.Value</option>
                    }
                }
            </select>
        </div>
        <div class="flex-1">
            <input type="search" id="Search" class="form-input" placeholder="Search" name="searchString" value="@ViewBag.currentSearchString" />
        </div>
        <div class="flex-1">
            <button class="button blue-back"> Search</button>
            <a asp-controller="Employee" asp-action="Index"> Clear All </a>
        </div>

    </div>
    <table class="table w-100 mt">
        <thead>
            <tr>
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.EmployeeName) },
                    {"displayName", "Employee Name" },

                })
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.Email) },
                    {"displayName", "Email" },

                })
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.DateOfBirth) },
                    {"displayName", "Date Of Birth" },

                })
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.Age) },
                    {"displayName", "Age" },

                })
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.Gender) },
                    {"displayName", "Gender" },

                })
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.Role) },
                    {"displayName", "Role" },

                })
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.DepartmentName) },
                    {"displayName", "Department" },

                })
                @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData){
                    { "columnName", nameof(EmployeeResponse.IsActive) },
                    {"displayName", "Is Active" },

                })
            </tr>
        </thead>
        <tbody>
            @foreach (EmployeeResponse employee in Model)
            {
                <tr>
                    <td style="width:15%">@employee.EmployeeName</td>
                    <td style="width:20%">@employee.Email</td>
                    <td style="width:12%">@employee.DateOfBirth?.ToString("dd MMM yyyy")</td>
                    <td style="width:8%">@employee.Age</td>
                    <td style="width:10%">@employee.Gender</td>
                    <td style="width:12%">@employee.Role</td>
                    <td style="width:12%">@employee.DepartmentName</td>
                    <td style="width:8%">@employee.IsActive</td>
                </tr>
            }
        </tbody>

    </table>
</form>